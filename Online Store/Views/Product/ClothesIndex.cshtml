@model IEnumerable<Online_Store.Models.Product>
@{
    ViewData["Title"] = "Clothes category | ";
}
 
 <!DOCTYPE html>
 <html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Amazon Website Clone | CodingNepal</title>
    <link rel="stylesheet" href="~/css/style1.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200">

 
    <script src="~/js/site.js" defer type="module"></script>

     </head>
     <body>
    <header>

        <nav class="navbar">
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    @* <li><a href="~/Home/Index">Home</a></li> *@
                   @*  <li class="active"><a href="~/Product/ClothesIndex"><i class="fa fa-angle-right" aria-hidden="true"></i>Clothes</a></li> *@
                </ul>
                <br />
            </div>
            <partial name="_LoginPartial" />


        </nav>
    </header>
    
            


    <div class="main-container">
         @foreach(var item in(IEnumerable<Product>) ViewBag.Model){ 
             <div class="product">
                <img src="~/Image/@item.Image" alt="" />
            <div class="product-desc">
                    <h3><a asp-action="Details" asp-route-id="@item.ProductId" style="color:black;"> @Html.DisplayFor(modelItem => item.ProductName)</a></h3>
                    <p>@Html.DisplayFor(modelItem => item.Price) EGP </p>
                <div >
                        <form method="post" action="@Url.Action("AddToCart", "Cart", new { id = item.ProductId })">
                           @Html.AntiForgeryToken()
                           <input type="hidden" name="action" value="ClothesIndex" />


                            <button type="submit" class="bottons"  >Add to cart</button>
                    </form>
                 </div>
            </div>
             </div>
             }
         </div>


    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
             
                alert("@ViewBag.Message");
        </script>
    }
    
     </body>
     </html>